                        android:text="@string/historyEntryAmount3_3"
                        android:layout_column="2"
                        android:layout_gravity="start|right"
                        android:textColor="@color/dashboardAmountColorPending"
                        android:textSize="@dimen/history_grid_item_secondary_font_size"/>

                </TableRow>


            </TableLayout>

    </ScrollView>

</FrameLayout>
