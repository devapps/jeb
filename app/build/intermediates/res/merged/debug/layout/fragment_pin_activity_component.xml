<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".PinActivityComponentFragment"
    android:id="@+id/componentScrollViewLayout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:id="@+id/componentLayout">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/npci_logo"
            android:src="@drawable/npci_logo_header"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textPSPName"
            android:id="@+id/textViewPSPName"
            android:textSize="@dimen/abc_text_size_title_material"
            android:layout_below="@id/npci_logo"/>

        <TextView android:text="@string/componentMessage" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewPSPMessage"
            android:textSize="@dimen/abc_text_size_subhead_material"
            android:textAlignment="center"
            android:layout_below="@+id/textViewPSPName"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"/>

    </RelativeLayout>
</ScrollView>
