<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PayFragment"
    android:background="@color/colorContentBackground">


    <LinearLayout
        android:id="@+id/layoutPayProgress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <ProgressBar
            android:id="@+id/payProgress"
            style="?android:attr/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </ProgressBar>
    </LinearLayout>


    <ScrollView
        android:id="@+id/payLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="insideInset">


    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left|top"
        android:padding="16dp"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/pay_from_text"
            android:spinnerMode="dropdown"
            android:background="@drawable/spinner_border"
            android:layout_height="@dimen/input_height"
            android:layout_width="match_parent"
            android:elevation="4dp"
            android:paddingTop="@dimen/input_spacing"
            android:paddingLeft="@dimen/input_spacing"
            android:paddingRight="@dimen/input_spacing_small"
            android:paddingBottom="@dimen/input_spacing_small"
            android:dropDownSelector="@color/colorPrimaryDark"
            android:descendantFocusability="afterDescendants">
        </android.support.v7.widget.AppCompatSpinner>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:background="@drawable/input_border"
            android:layout_height="@dimen/input_height"
            android:paddingTop="@dimen/input_spacing"
            android:paddingLeft="@dimen/input_spacing"
            android:paddingRight="@dimen/input_spacing_small"
            android:paddingBottom="@dimen/input_spacing_small"
            android:elevation="@dimen/input_elevation"
            android:layout_marginBottom="@dimen/vertical_spacing">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/pay_amount_text"
                android:hint="@string/pay_amount" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:background="@drawable/input_border"
            android:layout_height="@dimen/input_height"
            android:paddingTop="@dimen/input_spacing"
            android:paddingLeft="@dimen/input_spacing"
            android:paddingRight="@dimen/input_spacing_small"
            android:paddingBottom="@dimen/input_spacing_small"
            android:elevation="@dimen/input_elevation"
            android:layout_marginBottom="@dimen/vertical_spacing">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/pay_purpose_text"
                android:hint="@string/pay_purpose"/>

        </android.support.design.widget.TextInputLayout>

        <!--
        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/pay_acc_type"
            android:spinnerMode="dialog"
            android:background="@drawable/input_border"
            android:layout_height="@dimen/input_height"
            android:layout_width="match_parent"
            android:paddingTop="@dimen/input_spacing"
            android:paddingLeft="@dimen/input_spacing"
            android:paddingRight="@dimen/input_spacing_small"
            android:paddingBottom="@dimen/input_spacing_small"
            android:elevation="@dimen/input_elevation"
            android:layout_marginBottom="@dimen/vertical_spacing">
        </android.support.v7.widget.AppCompatSpinner>
        -->

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="0">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/input_border"
                    android:layout_height="@dimen/input_height"
                    android:paddingTop="@dimen/input_spacing"
                    android:paddingLeft="@dimen/input_spacing"
                    android:paddingRight="@dimen/input_spacing_small"
                    android:paddingBottom="@dimen/input_spacing_small"
                    android:elevation="@dimen/input_elevation"
                    android:layout_marginBottom="@dimen/vertical_spacing">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:id="@+id/pay_payee_va_text"
                        android:hint="@string/pay_to_addr"/>

                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:layout_column="1"
                    android:orientation="horizontal"
                    android:gravity="end|right">

                    <Button
                        android:id="@+id/pay_contacts_button"
                        style="?android:borderlessButtonStyle"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:background="@color/iconButtonBackground"
                        android:textColor="@color/iconButtonForeground"
                        android:textSize="14pt"
                        android:gravity="center|bottom"
                        android:textStyle="bold"/>

                    <Button
                        android:id="@+id/pay_qrcode_button"
                        style="?android:borderlessButtonStyle"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:background="@color/iconButtonBackground"
                        android:textColor="@color/iconButtonForeground"
                        android:textSize="14pt"
                        android:gravity="center|bottom"
                        android:textStyle="bold" />

                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:inputType="text"
                    android:textSize="5pt"

                android:textColor="@color/colorPrimaryDark"
                android:hint="@string/addr_hint_underline"/>
            </TableRow>

        </TableLayout>

        <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:background="@color/colorContentBackground"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <Button
                    android:id="@+id/proceed_pay_button"
                    style="?android:textAppearanceSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="50sp"
                    android:text="@string/pay_proceed"
                    android:background="@color/background_button"
                    android:textColor="@color/foreground_button"
                    android:textStyle="bold" />

                <View android:layout_height="@dimen/vertical_spacing"
                    android:layout_width="@dimen/horizontal_spacing"
                    android:background="@color/colorContentBackground"/>

                <Button
                    android:id="@+id/cancel_pay_button"
                    style="?android:textAppearanceSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pay_cancel"
                    android:background="@color/background_button"
                    android:textColor="@color/foreground_button"
                    android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    </ScrollView>

</FrameLayout>
